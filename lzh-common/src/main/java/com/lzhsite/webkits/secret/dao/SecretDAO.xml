<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lzhsite.webkits.secret.dao.SecretDAO">

    <select id="getSecret" resultType="com.lzhsite.webkits.secret.entities.SecretEntity">
        SELECT
            t.app_secret,
            t.is_inner
        FROM
            secret t
        WHERE
            t.app_id = #{appId}
            AND
            t.sign_type = #{signType}
    </select>

</mapper>